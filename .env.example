# Weather Flick Backend 환경 변수 예제

# 데이터베이스 설정
DATABASE_URL=postgresql://username:password@localhost:5432/weather_flick

# JWT 설정
JWT_SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 환경 설정
ENVIRONMENT=development  # development, staging, production

# 이메일 인증 설정
EMAIL_VERIFICATION_ENABLED=false  # 개발 환경에서는 false로 설정 가능

# Redis 설정 (선택사항)
REDIS_URL=redis://localhost:6379

# 이메일 서비스 설정 (이메일 인증 사용 시 필요)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@weatherflick.com
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587

# 외부 API 키
WEATHER_API_KEY=
KMA_API_KEY=
KAKAO_API_KEY=
GOOGLE_API_KEY=
KOREA_TOURISM_API_KEY=